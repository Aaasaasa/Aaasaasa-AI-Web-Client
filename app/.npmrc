# Force pnpm to hoist packages like npm/yarn (fixes "module not found")
shamefully-hoist = true
public-hoist-pattern = *

# Hoist critical build/dev tools
hoist-pattern[] = *typescript*
hoist-pattern[] = *tailwind*
hoist-pattern[] = *eslint*
hoist-pattern[] = *postcss*
hoist-pattern[] = *nuxt*
hoist-pattern[] = *vite*

# Ensure peer deps are auto-installed
auto-install-peers = true
