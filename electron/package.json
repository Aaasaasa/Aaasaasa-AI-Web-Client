{
  "name": "aaasaasa-web-client-electron",
  "version": "0.1.0",
  "private": true,
  "main": "main.cjs",
  "type": "commonjs",
  "homepage": "https://stajic.de",
  "author": {
    "name": "Aleksandar Stajic",
    "email": "info@stajic.de",
    "url": "https://stajic.de",
    "github": "Aaasaasa",
    "twitter": "aaasaasa",
    "linkedin": "in/aaasaasa",
    "company": "Aaasaasa"
  },
  "icon": "assets/logo.svg",
  "description": "Aaasaasa Web Client by Aleks",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env DEV_SERVER_URL=http://localhost:3000 ./node_modules/.bin/electron .",
    "dev:wait": "wait-on tcp:3000 && cross-env DEV_SERVER_URL=http://localhost:3000 ./node_modules/.bin/electron .",
    "prepack:entities": "node scripts/fix-entities.cjs",
    "postinstall": "electron-builder install-app-deps && node scripts/fix-entities.cjs",
    "pack:linux": "electron-builder -l AppImage deb",
    "pack:win": "electron-builder -w nsis portable",
    "pack:all": "electron-builder -mwl"
  },
  "dependencies": {
    "@duckdb/node-api": "1.3.2-alpha.26",
    "@mozilla/readability": "^0.6.0",
    "@qdrant/js-client-rest": "^1.9.0",
    "@sevinf/maybe": "^0.5.0",
    "cheerio": "^1.1.2",
    "dotenv": "^16.4.5",
    "electron-store": "^8.2.0",
    "entities": "6.0.1",
    "fast-glob": "^3.3.2",
    "minimatch": "^9.0.4",
    "undici": "^6.19.8"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "dmg-license": "^1.0.11",
    "electron": "^37.4.0",
    "electron-builder": "^24.13.3",
    "iconv-corefoundation": "^1.1.7"
  },
  "build": {
    "appId": "dev.aaasaasa.webclient",
    "productName": "Aaasaasa Web Client",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "app": ".",
      "output": "./release"
    },
    "extraResources": [
      {
        "from": "../aaasaasa.config.json",
        "to": "aaasaasa.config.json"
      }
    ],
    "extraMetadata": {
      "main": "main.cjs"
    },
    "files": [
      {
        "from": ".",
        "filter": [
          "**/*",
          "**/*.cjs",
          "**/*.js",
          "**/*.json",
          "node_modules/**",
          "services/**",
          "scripts/**",
          "helpers/**",
          "assets/**",
          "renderer/**",
          "!release/**",
          "!dist/**",
          "!.nuxt/**",
          "!.output/**",
          "!**/*.map"
        ]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.node",
      "**/entities/**",
      "**/@duckdb/**/build/**",
      "**/@duckdb/**/prebuilds/**",
      "**/duckdb/**/build/**"
    ],
    "beforePack": "./scripts/before-pack.cjs",
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "pnpm": {
    "overrides": {
      "entities": "4.5.0",
      "htmlparser2>entities": "4.5.0",
      "parse5>entities": "4.5.0",
      "cheerio>entities": "4.5.0",
      "@vue/compiler-core>entities": "4.5.0"
    }
  }
}
